            </div>
            <div class="form-group col-md-4">
                @Html.Label("txt_cpf_func", "CPF", new { @class = "control-label" })
                <div>
                    @Html.TextBox("txt_cpf_func", null, new { @class = "form-control", @placeholder = "Digite o CPF" })
