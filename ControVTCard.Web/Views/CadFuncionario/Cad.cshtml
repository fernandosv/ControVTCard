            </div>
            <div class="form-group col-md-4">
                @Html.Label("txt_nome_func", "Nome", new { @class = "control-label" })
                <div>
                    @Html.TextBox("txt_nome_func", null, new { @class = "form-control", @placeholder = "Digite o nome" })
