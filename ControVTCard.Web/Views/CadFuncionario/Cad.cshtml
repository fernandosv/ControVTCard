        $(document).on('click', '#_btn_confirmar', function () {
            abrir_form({ Id: 0, Mat: $('#txt_mat_func').val(), Nome: 'Fernando', CPF: '26' });

        })
            .on('click', '.btn-alterar', function () {
                var btn = $(this),
                    id = btn.closest('tr').attr('data-id'),
                    url = '@Url.Action("RecuperarUsuario", "CadUsuario")',
                    param = { 'id': id };

                $.post(url, add_anti_forgery_token(param), function (response) {
                    if (response) {
                        response.Senha = '@ViewBag.SenhaPadrao';
                        abrir_form(response);
                    }
                });
            })
            .on('click', '.btn-excluir', function () {
                var btn = $(this),
                    tr = btn.closest('tr'),
                    id = tr.attr('data-id'),
                    url = '@Url.Action("ExcluirUsuario", "CadUsuario")',
                    param = { 'id': id };

                bootbox.confirm({
                    message: "Realmente deseja excluir o usuário?",
                    buttons: {
                        confirm: {
                            label: 'Sim',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'Não',
                            className: 'btn-success'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.post(url, add_anti_forgery_token(param), function (response) {
                                if (response) {
                                    tr.remove();
                                }
                            });
                        }
                    }
                });
            })
            .on('click', '#btn_confirmar', function () {
                var btn = $(this),
                url = '@Url.Action("SalvarUsuario", "CadUsuario")',
                param = {
                    Id: $('#id_cadastro').val(),
                    Nome: $('#txt_nome').val(),
                    Login: $('#txt_login').val(),
                    Senha: $('#txt_senha').val()
                };

            $.post(url, add_anti_forgery_token(param), function (response) {
                if (response.Resultado == "OK") {
                    if (param.Id == 0) {
                        param.Id = response.IdSalvo;
                        var table = $('#grid_cadastro').find('tbody'),
                            linha = criar_linha_grid(param);

                        table.append(linha);
                    }
                    else {
                        var linha = $('#grid_cadastro').find('tr[data-id=' + param.Id + ']').find('td');
                        linha
                            .eq(0).html(param.Nome).end()
                            .eq(1).html(param.Login);
                    }

                    $('#modal_cadastro').parents('.bootbox').modal('hide');
                }
                else if (response.Resultado == "ERRO") {
                    $('#msg_aviso').hide();
                    $('#msg_mensagem_aviso').hide();
                    $('#msg_erro').show();
                }
                else if (response.Resultado == "AVISO") {
                    $('#msg_mensagem_aviso_').html(formatar_mensagem_aviso(response.Mensagens));
                    $('#msg_aviso').show();
                    $('#msg_aviso').delay(4000).fadeOut("slow");
                    $('#msg_mensagem_aviso_').show();
                    $('#msg_mensagem_aviso_').delay(2000).fadeOut("slow");
                    $('#msg_erro').hide();
                }
            });
        });

        function formatar_mensagem_aviso(mensagens) {
            var ret = '';

            for (var i = 0; i < mensagens.length; i++) {
                ret += '<li>' + mensagens[i] + '</li>';
            }

            return '<ul>' + ret + '</ul>';
        }
    </script>
