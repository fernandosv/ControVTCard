@model ControVTCard.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container-login">
    <div class="row col-md-12">
        <h3 class="titulo">Entrar no Sistema</h3>
    </div>
    <div class="row col-md-12">
        <section id="loginform">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Usuario, new { @class = "col-md-3 form-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", @placeholder="Digite o seu usuário de Login" })
                        @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "alert-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "col-md-3 form-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Digite sua senha"})
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "alert-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.CheckBoxFor(m => m.LembrarMe)
                        @Html.LabelFor(m => m.LembrarMe)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 col-md-offset-3">
                        <input type="submit" class="btn btn-success" value="Entrar" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
